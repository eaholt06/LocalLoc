<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/wifi_devidPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_devidPrompt"
        android:textSize="25sp"
        android:textColor="@color/theme_text"/>
    <EditText
        android:id="@+id/wifi_devidEnter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:clickable="true"
        android:textColor="@color/input_text"
        android:onClick="wifiTextClick"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:id="@+id/CSZ_wifiSubmit"
        android:text="Submit"
        android:onClick="submitSafeZone"
        android:background="@drawable/button_selector"/>

</LinearLayout>