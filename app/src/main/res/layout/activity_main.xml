<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#303234"
    android:paddingBottom="@dimen/main_vertical_margin"
    android:paddingLeft="@dimen/main_horizontal_margin"
    android:paddingRight="@dimen/main_horizontal_margin"
    android:paddingTop="@dimen/main_vertical_margin">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#000000">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_height="200dp"
            android:layout_width="285dp"
            android:scaleType="fitStart"
            android:src="@drawable/main_image"
            android:layout_gravity="center_horizontal"
            android:contentDescription="main logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/main_prompt_text"
            android:textColor="#C1C2C2"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="275dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_table">
            <TableRow
                android:layout_gravity="center_horizontal"
                android:layout_height="90dp"
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/Button1"
                    android:layout_height="match_parent"
                    android:layout_width="125dp"
                    android:text="@string/Button1Text"/>
                <Button
                    android:id="@+id/Button2"
                    android:layout_height="match_parent"
                    android:layout_width="125dp"
                    android:text="@string/Button2Text"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center_horizontal"
                android:layout_height="90dp"
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/Button3"
                    android:layout_height="match_parent"
                    android:layout_width="125dp"
                    android:text="@string/Button3Text"/>
                <Button
                    android:id="@+id/Button4"
                    android:layout_height="match_parent"
                    android:layout_width="125dp"
                    android:text="@string/Button4Text"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_notInSafeZone"
            android:textColor="#C1C2C2"
            android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>




