<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_grey"
    android:paddingBottom="@dimen/main_vertical_margin"
    android:paddingLeft="@dimen/main_horizontal_margin"
    android:paddingRight="@dimen/main_horizontal_margin"
    android:paddingTop="@dimen/main_vertical_margin"
    android:baselineAligned="false">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#e1000000">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_height="170dp"
            android:layout_width="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/main_image"
            android:layout_gravity="center_horizontal"
            android:contentDescription="main logo"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_prompt_text"
            android:textColor="#C1C2C2"
            android:textStyle="bold"
            android:background="@color/background_grey"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="275dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_table"
            android:padding="5dp"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_gravity="center_horizontal"
                android:layout_height="90dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/Button1"
                    android:layout_height="@dimen/button_height"
                    android:layout_width="@dimen/button_width"
                    android:layout_weight="1"
                    android:text="@string/Button1Text"
                    android:onClick="buttonOnClick"
                    android:layout_marginRight="@dimen/main_button_margin"
                    android:gravity="center"
                    android:background="@drawable/button_selector"/>
                <Button
                    android:id="@+id/Button2"
                    android:layout_height="65dp"
                    android:layout_width="125dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:text="@string/Button2Text"
                    android:onClick="buttonOnClick"
                    android:gravity="center"
                    android:background="@drawable/button_selector"/>
            </TableRow>

            <TableRow
                android:layout_gravity="center_horizontal"
                android:layout_height="90dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/Button3"
                    android:layout_height="fill_parent"
                    android:layout_width="125dp"
                    android:text="@string/Button3Text"
                    android:layout_weight="2"
                    android:onClick="buttonOnClick"
                    android:layout_marginRight="@dimen/main_button_margin"
                    android:gravity="center"
                    android:background="@drawable/button_selector"/>
                <Button
                    android:id="@+id/Button4"
                    android:layout_height="65dp"
                    android:layout_width="125dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:text="@string/Button4Text"
                    android:onClick="buttonOnClick"
                    android:gravity="center"
                    android:background="@drawable/button_selector"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_notInSafeZone"
            android:textSize="19dp"
            android:textColor="#C1C2C2"
            android:textStyle="bold"
            android:clickable="false"
            android:background="@color/dark_blue"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp" />

        </LinearLayout>

    </LinearLayout>




